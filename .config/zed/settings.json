    }
  ],
    "edit_predictions": {
        "mode": "subtle",
        "copilot": {
            "proxy": null,
            "proxy_no_verify": null,
            "enterprise_uri": null
        },
        "enabled_in_text_threads": false
    },
    "agent": {
        "play_sound_when_agent_done": true,
        "default_profile": "write",
        "default_model": {
            "provider": "google",
            "model": "gemini-2.5-pro"
        }
    },
    "features": {
        "edit_prediction_provider": "zed"
    },
    "telemetry": {
        "diagnostics": true,
        "metrics": false
    },
    "icon_theme": "Zed (Default)",
    "vim_mode": true,
    "ui_font_size": 13,
    "buffer_font_size": 13,
    "buffer_font_family": "JetBrainsMono Nerd Font Mono",
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Gruvbox Dark Hard"
    },
    "tab_size": 4,
    "preferred_line_length": 88,
    "format_on_save": "on",
    "languages": {
        "Python": {
            "language_servers": ["!basedpyright", "ty", "ruff"],
            "format_on_save": "on",
            "formatter": [
                {
                    "language_server": {
                        "name": "ruff"
                    }
                }
            ],
            "tab_size": 4,
            "preferred_line_length": 88
        },
        "TypeScript": {
            "language_servers": ["!typescript-language-server", "vtsls"],
            "format_on_save": "on",
            "tab_size": 2,
            "preferred_line_length": 100
        },
        "TSX": {
            "language_servers": ["!typescript-language-server", "vtsls"],
            "format_on_save": "on",
            "tab_size": 2,
            "preferred_line_length": 100
        }
    },
    "lsp": {
        "ruff": {
            "initialization_options": {
                "settings": {
                    "lineLength": 88,
                    "lint": {
                        "select": [
                            "E",
                            "F",
                            "I",
                            "N",
                            "W",
                            "UP",
                            "B",
                            "C4",
                            "PIE",
                            "SIM"
                        ],
                        "ignore": []
                    },
                    "format": {
                        "quote-style": "double",
                        "indent-style": "space"
                    }
                }
            }
        },
        "ty": {
            "binary": {
                "path": "ty",
                "arguments": ["server"]
            }
        },
        "vtsls": {
            "settings": {
                "typescript": {
                    "tsserver": {
                        "maxTsServerMemory": 4096
                    },
                    "inlayHints": {
                        "parameterNames": "all",
                        "functionLikeReturnTypes": true
                    }
                }
            }
        }
    },
    "terminal": {
        "font_family": "JetBrainsMono Nerd Font Mono",
        "shell": {
            "program": "/bin/zsh"
        },
        "env": {
            "UV_TOOL_DIR": "$HOME/.local/share/uv/tools"
        }
    },
    "file_types": {
        "pyproject.toml": ["TOML"],
        "uv.lock": ["TOML"]
    }
}
