# Nice themes are: GruvboxDarkHard, tokyonight_night, catppuccin_mocha, nostromo
theme = GruvboxDarkHard
window-theme = ghostty

font-family = JetBrainsMono Nerd Font
font-size = 11

adjust-cell-width = 0%
adjust-cell-height = 0%

shell-integration = zsh
shell-integration-features = sudo, no-cursor

# Options for cursor-style are: bar, block, underline, block_hollow
cursor-style = bar
cursor-style-blink = true

background-opacity = 1

mouse-scroll-multiplier = 5

# Tab motions
keybind = ctrl+shift+left=previous_tab
keybind = ctrl+shift+right=next_tab
# Vim motions
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right
# Splitting panes
keybind = ctrl+\=new_split:right
keybind = ctrl+-=new_split:down

keybind = shift+enter=text:\n
